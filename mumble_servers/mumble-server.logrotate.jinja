/var/log/mumble-server/{{ server_name }}.log {
        weekly
        rotate 7
        compress
        delaycompress
        missingok
        postrotate
                start-stop-daemon --quiet --oknodo --stop --signal 1 --exec /usr/sbin/murmurd --user mumble-server --pidfile /var/run/mumble-server/{{ server_name }}.pid
        endscript
}
